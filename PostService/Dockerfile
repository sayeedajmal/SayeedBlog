FROM openjdk:17-alpine

WORKDIR /app

COPY target/PostService.jar /app/PostService.jar
EXPOSE 8081

ENV JWT_SECRET=${JWT_SECRET}
ENV BlogUrl=${BlogUrl}
ENV BlogDB=${BlogDB}
# ENV CORS_URL=${CORS_URL}
# ENV CORS_METHODS=${CORS_METHODS}
ENV MicroZone=${MicroZone}
ENV MULTIPART_ENABLED=${MULTIPART_ENABLED}
ENV MAX_FILE_SIZE=${MAX_FILE_SIZE}
ENV MAX_REQUEST_SIZE=${MAX_REQUEST_SIZE}
ENV POST_VERSION=${POST_VERSION}

ENTRYPOINT ["java","-jar","PostService.jar"]  